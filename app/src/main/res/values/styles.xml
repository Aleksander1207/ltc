<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button_primary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#353535</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="button_secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="strokeColor">@color/black</item>
        <item name="cornerRadius">10dp</item>
    </style>
    <style name="button_secondary.sign_out">
        <item name="cornerRadius">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>
</resources>